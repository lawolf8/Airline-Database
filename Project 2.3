CREATE OR ALTER TRIGGER Restricted_Edit_On_Planes_Trigger
ON planes
INSTEAD OF INSERT, UPDATE, DELETE
AS
BEGIN
    -- Show message for all operations
    RAISERROR ('Input, modification, or deletion of rows not allowed.', 16, 1);
END;
